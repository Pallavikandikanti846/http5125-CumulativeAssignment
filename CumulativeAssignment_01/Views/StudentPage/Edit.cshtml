@model CumulativeAssignment_01.Models.Student
@* Styling the Form *@
<style>
	#updateParentDiv {
		margin-right500px;
	}

	form {
		border: 1px solid black;
		padding: 15px;
		text-align: center;
		width: 30%;
	}

	.formInput {
		margin-bottom: 10px;
		display: flex;
		align-items: center;
	}

		.formInput label {
			width: 100px;
			display: block;
		}
</style>

@* Form Creation *@
<div id="updateParentDiv">
	<nav>
		<a class="navlink" href="/StudentPage/List">Back To Students List</a>
	</nav>

	<h2> Update Student</h2>
	<form method="POST" action="/StudentPage/Update">
		<input type="hidden" name="id" value="@Model.StudentId" />
		<div class="formInput">
			<label for="StudentFName">First Name:</label>
			<input type="text" id="StudentFName" name="StudentFName" value="@Model.StudentFName" />
		</div>
		<div class="formInput">
			<label for="StudentLName">Last Name:</label>
			<input type="text" id="StudentLName" name="StudentLName" value="@Model.StudentLName" />
		</div>
		<div class="formInput">
			<label for="StudentNumber">Student Number:</label>
			<input type="text" id="StudentNumber" name="StudentNumber" value="@Model.StudentNumber" />
		</div>
		<div class="formInput">
			<label for="EnrolDate">Enrol Date:</label>
			<input type="date" id="EnrolDate" name="EnrolDate" value="@Model.EnrolDate.ToString("yyyy-MM-dd")" />
		</div>
		<div class="formInput">
			<input type="submit" value="Update Student" />
		</div>
	</form>
</div>